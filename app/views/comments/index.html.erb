<p id="notice"><%= notice %></p>

<h1>コメントリスト</h1>

<table>
  <thead>
    <tr>
      <th>掲示板コード</th>
      <th>投稿者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.board_id %></td>
        <td><%= comment.user_id %></td>
        <td><%= comment.message %></td>
        <td><%= comment.integer %></td>
        <td><%= comment.image %></td>
        <td><%= link_to '詳細', comment %></td>
        <td><%= link_to '編集', edit_comment_path(comment) %></td>
        <td><%= link_to '削除', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

