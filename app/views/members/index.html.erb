<p id="notice"><%= notice %></p>

<h2>所属メンバー一覧</h2>

<table>
  <thead>
    <tr>
      <th>所属メンバー</th>
      <th>グループ名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.user_id %></td>
        <td><%= member.group_id %></td>
        <td><%= link_to 'メンバー詳細', member %></td>
        <td><%= link_to 'メンバー編集', edit_member_path(member) %></td>
        <td><%= link_to '脱退', member, method: :delete, data: { confirm: 'このグループを脱退しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

