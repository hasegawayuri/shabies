<p id="notice"><%= notice %></p>

<h2>グループ一覧</h2>

<table>
  <thead>
    <tr>
      <th>アイコン</th>
      <th>グループ名</th>
      <th>系統</th>
      <th>人数制限</th>
      <th>作成者</th>
      <th>紹介文</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= image_tag(url_for(image_of_groups_path(group)),size:'100x100') %></td>
        <td><%= group.groupname %></td>
        <td><%= group.classification_id %></td>
        <td><%= group.limit %></td>
        <td><%= group.user_id %></td>
        <td><%= group.introduction %></td>
        <td><%= link_to 'グループ詳細', group %></td>
        <td><%= link_to 'グループ設定編集', edit_group_path(group) %></td>
        <td><%= link_to 'グループ削除', group, method: :delete, data: { confirm: 'グループが削除されます。実行しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

