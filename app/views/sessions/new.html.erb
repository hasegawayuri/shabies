<h1>ログイン</h1>

<%= form_with model: @session, local: true do |form| %>
  <%= flash[:danger] %>

  <%= form.label :mailaddress, 'メールアドレス' %>
  <%= form.email_field :mailaddress %>

  <%= form.label :password, 'パスワード' %>
  <%= form.password_field :password %>

  <%= form.submit 'ログイン' %>
  <% end %>

